{
  "manifest_version": 3,
  "name": "🙈 Confluence Unwatcher",
  "version": "1.0.0",
  "description": "🚀 Confluenceの全てのウォッチを一括解除するChrome拡張",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["*://*.atlassian.net/*", "*://*/confluence/*", "*://confluence.*/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "🙈 Confluence Unwatcher"
  }
}